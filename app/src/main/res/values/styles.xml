<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/midGreen</item>
        <item name="colorPrimaryDark">@color/newColorPrimaryDark</item>
        <item name="colorAccent">@color/newColorAccent</item>
        <item name="fontFamily">@font/special_elite</item>
    </style>

    <style name="AppbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/pureWhite</item>
        <item name="titleTextColor">@color/pureWhite</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PlaceListBox">
        <item name="android:background">@color/lightTan</item>
    </style>

</resources>
